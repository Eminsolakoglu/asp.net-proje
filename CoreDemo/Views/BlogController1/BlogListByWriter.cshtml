@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazarın blogları</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.BlogID</th>
            <td>@item.BlogTitle</td>
            <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>
            <td>@item.Category.CategoryName</td>
            <td>
                @if (item.BlogStatus)
                {
                    <span class="badge badge-success">Aktif</span>
                }
                else
                {
                    <span class="badge badge-secondary">Pasif</span>
                }
            </td>
            <td><a href="javascript:void(0);" onclick="confirmDelete(@item.BlogID)" class="btn btn-danger">Sil</a></td>
            <td><a href="/BlogController1/EditBlog/@item.BlogID" class="btn btn-warning">Düzenle</a></td>
        </tr>
    }

</table>
<a href="#" class="btn btn-primary">Yeni Blog Oluştur</a>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>
    function confirmDelete(blogId) {
        swal({
            title: 'Bloğu silmek istediğinizden emin misiniz?',
            text: "Bu işlem geri alınamaz!",
            icon: 'warning',
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    // Eğer kullanıcı onay verirse, silme işlemini gerçekleştiren URL'ye yönlendirin
                    window.location.href = "/BlogController1/DeleteBlog/" + blogId;
                }
            });
    }
</script>
